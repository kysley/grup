extends auth

block auth
  form.form-horizontal.form-signin(action="/users/sessions", method="post", role="form")
    input(type="hidden", name="_csrf", value="#{csrf_token}")

    p.col-sm-offset-2.error= message

    input#email.form-control(type="text", placeholder="username", name="username")

    input#password.form-control(type="password", placeholder="Password", name="password")

    br
    button.btn.btn-primary.btn-block(type="submit") Log in
    br