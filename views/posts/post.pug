post.post
  h3
    a(href='/posts/'+post._id, title=post.title) #{post.title}
  p= post.body

  .meta
    span.muted= formatDate(post.createdAt)

    if (post.username)
      |
      span Author

      - var name = post.username ? post.username : post.username

      a(href="/users/"+post.user._id)= name